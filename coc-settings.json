{
    
    "languageserver": {
      "ccls": {
        "command": "ccls",
        "filetypes": ["c", "cc", "cpp", "c++", "objc", "objcpp"],
        "rootPatterns": [".ccls", "compile_commands.json", ".git/", ".hg/"],
        "initializationOptions": {
	    "highlight": {"lsRanges": true},
            "cache": {
              "directory": "/tmp/ccls"
            },
	    "clang": {
		"resourceDir": "/usr/lib/clang/14.0.0"
	    },
	    "completion": {
		"detailedLable": true,
		"placeholder": true
	    },
	    "index": {
		"onChange": false,
		"initialNoLinkage": true,
		"threads": 2
	    },
	    "compliationDatabaseDirectory": ".vscode/"
          }
      }

    }
}
